<div class="p-5">
<h2 class="text-white text-center">
  <%= @list.name %> (<%= @list.bookmarks.length %> movies)
</h2>
</div>
<div class="mx-auto d-flex flex-column align-items-center">
<%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-primary my-2" %>

<% @list.bookmarks.each do |bm| %>
  <div class="card mb-3 border-0" style="max-width: 800px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src=<%= "#{bm.movie.poster_url}" %> class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body d-flex flex-column">
      <div class="card-title d-flex justify-content-between">
        <h5 class="card-title fw-bold"><%= bm.movie.title %></h5>
        <span>
          <i class="fa-solid fa-star text-warning"></i>
          <%= bm.movie.rating %>
        </span>
      </div>
      <p class="card-text fw-light flex-grow-1"><%= bm.movie.overview %></p>
      <div class="d-flex justify-content-between align-items-center">
        <p class="card-text fw-bold"><%= bm.comment %></p>
        <%= link_to "delete", bookmark_path(bm), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "card-link text-danger" %>
      </div>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
